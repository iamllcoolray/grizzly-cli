#!/usr/bin/perl

use strict;
use warnings;
use feature qw(say);
use Getopt::Long;
use Pod::Usage;

use FindBin;
use lib "$FindBin::Bin/../lib";
use Oolong;

my $help    = 0;
my $version = '';
my $symbol;
GetOptions(
	"q|quote:s" => \$symbol,
	"h|help"    => \$help,
	"v|version" => \$version,
) or die("Run: oolong --help");

if ($help) {
	pod2usage(1);
}

if ($version) {
	say("Oolong - version $Oolong::VERSION");
}

if ( defined $symbol ) {

	#say($symbol) if $symbol;
	my $quote = Oolong->new({symbol => $symbol});
	$quote->symbol_o;

	unless ( length $symbol) {
		die("Run: oolong --quote [stock symbol]");
	}
}

__END__

=head1 NAME
 
B<Oolong> - A command-line interface for looking up stock quote.
 
=head1 SYNOPSIS
 
B<oolong> [options]

 Options:
   -q | --quote [stock symbol]   prints out stock quote
   -h | --help                   prints out help message
   -v | --version                prints out version number
 
=head1 OPTIONS
 
=over 8

=item B<-q | --quote>
 
Prints out the stock quote of a given symbol.
 
=item B<-h | --help>
 
Prints out a help message on how to use Oolong.

=item B<-v | --version>
 
Prints out Oolong's version number.
 
=back
 
=head1 DESCRIPTION
 
B<Oolong> will output the stock qoute of the given symbol.

